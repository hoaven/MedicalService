body{
    font-family: "Microsoft YaHei";
}

.welcome{
    width: 85%;
    height: 35px;
    font-size: 18px;
    text-align: right;
    border-bottom: 2px solid #138bd0;
    margin: 0 auto;
    margin-top: 30px;
}

.content{
    width: 85%;
    min-height: 650px;
    margin: 0 auto;
    margin-top: 40px;
}

.content ul{
    width: 17%;
    float: left;
    margin-left: 20px;
}

.nav-pills>li{
    float: none;
    width: 100%;
    margin-bottom: 17px;
    color: #ffffff;
    font-size: 18px;
    text-align: center;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    background: -moz-linear-gradient(top,#95eff0,#1bb9de);
    background: -webkit-linear-gradient(top,#95eff0,#1bb9de);
    background: -ms-linear-gradient(top,#95eff0,#1bb9de);
    background: -o-linear-gradient(top,#95eff0,#1bb9de);
    background: linear-gradient(top,#95eff0,#1bb9de);
    filter:progid:DXImageTransform.Microsoft.gradient(startcolorstr=#95eff0,endcolorstr=#1bb9de,gradientType=0);
}

.nav-pills>li>a{
    color: #fff;
}

.nav-pills>li.active>a,.nav-pills>li.active>a:focus,.nav-pills>li>a:hover, .nav-pills>li.active>a:hover{
    transform: scale(1.1,1.1);
    -webkit-transform: scale(1.1,1.1);
    -moz-transform: scale(1.1,1.1);
    -ms-transform: scale(1.1,1.1);
    -o-transform: scale(1.1,1.1);
    background: -moz-linear-gradient(top,#6cbdec,#2774c2);
    background: -webkit-linear-gradient(top,#6cbdec,#2774c2);
    background: -ms-linear-gradient(top,#6cbdec,#2774c2);
    background: -o-linear-gradient(top,#95eff0,#1bb9de);
    background: linear-gradient(top,#95eff0,#1bb9de);
    filter:progid:DXImageTransform.Microsoft.gradient(startcolorstr=#95eff0,endcolorstr=#1bb9de,gradientType=0);
}

.tab-content>.tab-pane {
    display:none;
    width: 78%;
    height: 740px;
    float: left;
    margin-left: 8px;
    border: 2px solid #c7c7c7;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
}
.tab-content>.active{
    display:block;
}



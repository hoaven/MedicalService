body{
    margin: 0px;
    padding: 0px;
    width: 100%;
    font-family: "Microsoft YaHei";
    background: #eef6f1;
}

a,a:link,a:hover,a:visited,a:active{  text-decoration: none;  }

.head-top{
    width: 100%;
    height: 45px;
    padding: 5px;
    background: #0080c0;
}

.head-top .button{
    width: 200px;
    height: 100%;
    float: right;
}

.top-img{
    width: 100%;
}

.navigation{
    width: 100%;
    height: 45px;
    text-align: center;
    padding: 0 20px;
    background: url("../images/bg.jpg") repeat-x;
    border-bottom: 3px solid #7fbb06;
}

.navigation .nav1{
    width: 68%;
    height: 45px;
    color: #393939;
    font-size: 19px;
    font-weight: bold;
    margin: 0 auto;
    line-height: 2.2em;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
}

.navigation .nav1:hover,.navigation .active{
    color: #fff;
    background: -moz-linear-gradient(top,#c1f70e,#559500);
    background: -webkit-linear-gradient(top,#c1f70e,#559500);
    background: -ms-linear-gradient(top,#c1f70e,#559500);
    background: -o-linear-gradient(top,#c1f70e,#559500);
    background: linear-gradient(top,#c1f70e,#559500);
    filter:progid:DXImageTransform.Microsoft.gradient(startcolorstr=#c1f70e,endcolorstr=#559500,gradientType=0);
}

